@model IEnumerable<ModelLayer.Models.Location>

@{
    ViewData["Title"] = "Store Selection";
}

<h1>StoreSelect</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
 {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Select" asp-route-id="@item.Id" class="btn btn-primary">Shop</a>
            </td>
        </tr>
}
    </tbody>
</table>
